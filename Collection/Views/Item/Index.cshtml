@using Microsoft.AspNetCore.Authorization
@model Collection.ViewModels.ToyListViewModel

@{
    ViewData["Title"] = "Index";

}

<div class="row">
    <div class="col-md-3">
        <p class="navbar-text">Total items: @Model.Toys.Count() <a asp-action="Create">Add New</a></p>
    </div>
    <div class="col-md-4 text-right">    
        <span>Show as: </span>
        <a asp-action="index" asp-controller="item" asp-route-showAs="list" asp-route-search="@ViewData["search"]" asp-route-display="@ViewData["display"]" class="btn btn-default navbar-btn"><span class="glyphicon glyphicon-list"></span></a>
        <a asp-action="index" asp-controller="item" asp-route-showAs="gallery" asp-route-search="@ViewData["search"]" asp-route-display="@ViewData["display"]" class="btn btn-default navbar-btn"><span class="glyphicon glyphicon-picture"></span></a>
    </div>
    <div class="col-md-5 text-right">
            <form asp-action="index" asp-controller="item" asp-route-showAs="@ViewData["showAs"]" method="get" class="form-inline">
                <div class="form-group">
                    <label class="">Show:</label>
                    <select name="filterBy" asp-items="@Model.Categories" class="form-control"></select>
                </div>
                <div class="form-group">
                    <label>Sort by:</label>
                    <select name="sortBy" asp-items="@Model.Sort" class="form-control"></select>
                </div>
                <button type="submit" class="btn btn-info">Filter</button>
            </form>
    </div>
</div>

<hr />

<div class="row">
    @{
        if((string)ViewData["showAs"] == "gallery")
        {
            await Html.RenderPartialAsync("_ToyGalleryPartial", Model.Toys);
        }
        else
        {
            await Html.RenderPartialAsync("_ToyListPartial", Model.Toys);
        }
    }
</div>
