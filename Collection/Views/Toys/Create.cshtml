@model Collection.ViewModels.ToyAddViewModel

@{
    ViewBag.Title = "Adding new toy :)";
}

<div class="col-lg-12"><h1 class="text-center text-capitalize">Add new Toy to my Collection :)</h1></div>

<div class="col-lg-8 col-lg-offset-2">
    <form asp-controller="Toys" asp-action="Create" method="post" enctype="multipart/form-data">
        @{Html.RenderPartial("_ToyForm", Model);}
        <div class="form-group"><button type="submit" class="btn btn-info center-block">Add toy</button></div>
    </form>
</div>
