<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,700" rel="stylesheet">
    <link href="~/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/cards.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <header>
            <nav class="navbar navbar-fixed-top @*navbar-inverse*@">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="#">Haru Inflatables Collection</a>
                    </div>
                    <div>
                        <ul class="nav navbar-nav">
                            <li class="@*active*@"><a href="#">Home</a></li>
                            <li class=""><a asp-controller="toys" asp-action="collection">My collection</a></li>
                            <li class=""><a asp-controller="toys" asp-action="wanted">Wanted toys</a></li>
                            <li class=""><a href="#">My Clips</a></li>
                            <li class=""><a href="#">About me</a></li>
                        </ul>

                    </div>
                    <form class="navbar-form navbar-right">
                        <div class="form-group">
                            <input class="form-control" placeholder="Search for toy..."/>
                        </div>
                        <button type="submit" class="btn btn-success">SEARCH</button>
                    </form>
                </div>
            </nav>
        </header>
        @RenderBody()
    </div>

    <script src="~/js/jquery.js"></script>
    <script src="~/js/bootstrap.js"></script>
</body>
</html>
